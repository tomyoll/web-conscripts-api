{
    "env": {
      "node": true,
      "commonjs": true
    },
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:n/recommended",
      "eslint-config-airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": ["prettier"],
    "rules": {
      // Format errors ===============================================================
      "prettier/prettier": "error",
  
      // NodeJS errors ===============================================================
      "n/exports-style": ["error", "module.exports"],
      "n/file-extension-in-import": ["error", "always"],
      "n/prefer-global/buffer": ["error", "always"],
      "n/prefer-global/console": ["error", "always"],
      "n/prefer-global/process": ["error", "always"],
      "n/prefer-global/url-search-params": ["error", "always"],
      "n/prefer-global/url": ["error", "always"],
      "n/prefer-promises/dns": "error",
      "n/prefer-promises/fs": "error",
      "no-use-before-define": ["error", { "functions": false }],
      "n/no-unsupported-features/node-builtins": "off",
  
      // VanillaJS errors =============================================================
      "import/no-useless-path-segments": [
        "error",
        {
          "noUselessIndex": true
        }
      ],
      "no-restricted-syntax": ["error", "LabeledStatement", "ForInStatement", "WithStatement"],
      "no-underscore-dangle": 0,
      "class-methods-use-this": 0,
      "max-classes-per-file": ["error", 7],
      "no-param-reassign": ["error", { "props": false }],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "consistent-return": "off",
      "no-unused-expressions": "off",
      "no-await-in-loop": "off",
      "camelcase": "off",
      "no-useless-escape": "off",
      "no-continue": "off",
  
      "one-var": "off",
      "padding-line-between-statements": [
        "error",
        /* FOR CONST DECLARATION BLOCK */
        { "blankLine": "always", "prev": "multiline-const", "next": "*" },
        { "blankLine": "always", "prev": "*", "next": "multiline-const" },
        /* FOR CONST DECLARATION BLOCK */
  
        /* FOR LET DECLARATION BLOCK */
        { "blankLine": "always", "prev": "multiline-let", "next": "*" },
        { "blankLine": "always", "prev": "*", "next": "multiline-let" },
        /* FOR LET DECLARATION BLOCK */
  
        /* FOR BLOCKS LIKE {} */
        {
          "blankLine": "always",
          "prev": ["if", "switch", "function", "block-like", "class"],
          "next": "*"
        },
        {
          "blankLine": "always",
          "prev": "*",
          "next": ["if", "switch", "function", "block-like", "class"]
        },
        /* FOR BLOCKS LIKE {} */
  
        /* FOR RETURN  */
        { "blankLine": "always", "prev": "*", "next": "return" },
        /* FOR RETURN  */
  
        /* FOR FUNCTION INVOCATION  */
        { "blankLine": "always", "prev": "expression", "next": "*" },
        { "blankLine": "always", "prev": "*", "next": "expression" }
        /* FOR FUNCTION INVOCATION  */
      ],
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": false,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "curly": ["error", "all"]
    }
  }
  